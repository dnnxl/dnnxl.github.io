<div class="outreach">
  {% if site.outreach != blank %}
    {% assign outreach_size = site.outreach | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.announcements.scrollable and outreach_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign outreach = site.outreach | reverse %}
        {% if include.limit and page.announcements.limit %}
          {% assign outreach_limit = page.announcements.limit %}
        {% else %}
          {% assign outreach_limit = outreach_size %}
        {% endif %}
        {% for item in outreach limit: outreach_limit %}
          <tr>
            <th scope="row" style="width: 20%">
              {{ item.date | date: '%b %d, %Y' }}
            </th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="outreach-title" href="{{ item.url | relative_url }}">
                  {{ item.title }}
                </a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No outreach activities yet...</p>
  {% endif %}
</div>
